<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="3dp"
                android:left="1dp"
                android:right="2dp"
                android:top="0dp" />
            <solid android:color="#50CCCCCC" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/mealBoardBackground" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>